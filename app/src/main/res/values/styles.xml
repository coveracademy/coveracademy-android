<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:actionModeStyle">@style/ActionModeTheme</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>

        <item name="android:actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolbarTitleTheme">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsingToolbarExpandedTitleTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ActionModeTheme" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/cab_background</item>
        <item name="backgroundSplit">@color/cab_background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/ActionModeTitleTheme</item>
    </style>

    <style name="ActionModeTitleTheme">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="android:background">@android:color/white</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">5dp</item>
    </style>

    <style name="ActionMenuTextAppearance">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationViewItemTextAppearance">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="WhiteProgress" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@android:color/white</item>
    </style>

    <style name="TextViewWithShadow">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Edit Text -->
    <style name="EditTextWithoutUnderline" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Button -->
    <style name="SmallButton">
        <item name="android:padding">@dimen/content_margin</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Button">
        <item name="android:padding">@dimen/content_margin_double</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="LargeButton">
        <item name="android:padding">40dp</item>
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>

    <style name="DefaultButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="PrimaryButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/button_primary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AccentButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/button_accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="DanderButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/button_danger</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/content_margin_double</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="FlatSmallButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">@dimen/content_margin</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="FlatAccentButton" parent="FlatButton">
        <item name="android:textColor">@color/button_accent</item>
    </style>

    <style name="FlatAccentSmallButton" parent="FlatSmallButton">
        <item name="android:textColor">@color/button_accent</item>
    </style>

    <style name="FlatDangerButton" parent="FlatButton">
        <item name="android:textColor">@color/button_danger</item>
    </style>

    <style name="FlatDangerSmallButton" parent="FlatSmallButton">
        <item name="android:textColor">@color/button_danger</item>
    </style>

    <style name="FloatActionButtonLabel">
        <item name="android:background">@drawable/fab_label</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

</resources>