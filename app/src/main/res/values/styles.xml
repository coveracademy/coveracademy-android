<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:actionModeStyle">@style/ActionModeTheme</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>

        <item name="android:actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolbarTitleTheme">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionModeTheme" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/cab_background</item>
        <item name="backgroundSplit">@color/cab_background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="titleTextStyle">@style/ActionModeTitleTheme</item>
    </style>

    <style name="ActionModeTitleTheme">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionMenuTextAppearance">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="android:background">@android:color/white</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorHeight">6dp</item>
    </style>

    <!-- Buttons -->
    <style name="Button" parent="Material.Drawable.Ripple.Touch.MatchView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingLeft">@dimen/content_margin</item>
        <item name="android:paddingRight">@dimen/content_margin</item>
        <item name="rd_rippleColor">#33000000</item>
    </style>

    <style name="SmallButton" parent="Button">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="FlatSmallButton" parent="SmallButton">
        <item name="android:textColor">@color/button_flat</item>
        <item name="android:background">@drawable/button_flat</item>
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_rippleColor">@color/button_flat_pressed</item>
        <item name="rd_cornerRadius">3dp</item>
    </style>

</resources>
